<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home_page"
    android:background="@color/dgrey"
    >

  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentTop="true"
      android:background="@color/accent1"
      android:gravity="end">

    <ImageButton
        android:id="@+id/menubtn"
        android:layout_width="78dp"
        android:layout_height="35dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="@color/accent1"
        android:src="@drawable/ic_sidemenu_foreground" />

    <ImageButton
        android:id="@+id/logo"
        android:layout_width="40dp"
        android:layout_height="36dp"
        android:layout_marginStart="35dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="200dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/menubtn"
        android:backgroundTint="@color/accent1"
        android:scaleX="0.8"
        android:scaleY="0.8"
        android:src="@drawable/icon_white" />

  </RelativeLayout>

  <ImageView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:src="@drawable/cvv" />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="190dp"
        android:src="@drawable/pfp"/>

  <TextView
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginLeft="120dp"
      android:layout_marginTop="250dp"
      android:text="Bennett"
      android:textColor="@color/accent1"
      android:textSize="30dp" />

  <ImageView
      android:layout_width="400dp"
      android:layout_height="wrap_content"
      android:layout_marginStart="10dp"
      android:layout_marginTop="270dp"
      android:layout_marginEnd="10dp"
      android:layout_marginBottom="10dp"
      android:src="@drawable/tt" />

  <EditText
      android:id="@+id/statsinput"
      android:layout_width="373dp"
      android:layout_height="100dp"
      android:layout_marginLeft="20dp"
      android:layout_marginTop="350dp"
      android:background="@drawable/layout_bg"
      android:hint="Post a status..."
      android:padding="10dp"
      android:textColor="@color/lgrey"
      android:textColorHint="@color/lgrey" />

  <com.google.android.material.button.MaterialButton
      android:id="@+id/poststats"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
      android:layout_marginStart="20dp"
      android:layout_marginTop="460dp"
      android:layout_marginEnd="20dp"
      android:backgroundTint="@color/accent2"
      android:paddingHorizontal="90dp"
      android:text="Post"
      android:textSize="17dp" />
</RelativeLayout>